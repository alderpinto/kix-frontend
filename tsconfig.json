{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2015",
      "es2016"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "declaration": false,
    "outDir": "dist"
  },
  "types": [
    "node",
    "reflect-metadata"
  ],
  "include": [
    "src/**/*.ts",
    "features/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}