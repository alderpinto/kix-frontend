{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2015",
      "es2016"
    ],
    "types": [
      "node",
      "reflect-metadata",
      "mocha"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "declaration": false,
    "strict": false,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "outDir": "dist"
  },
  "types": [
    "node",
    "reflect-metadata"
  ],
  "include": [
    "features/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}