{
  // Platzieren Sie Ihre Einstellungen in dieser Datei, um Standard- und Benutzereinstellungen zu Ã¼berschreiben.
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "node_modules": true,
    ".cache": true,
    "dist": true
  },
  "editor.tabSize": 4,
  "editor.formatOnSave": true,
  "todohighlight.exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.vscode/**",
    "**/.history/**"
  ],
  "local-history.daysLimit": 30,
  "less.lint.important": "warning",
  "marko.beautify.indent": "    ",
  "marko.beautify.maxLen": 120,
  "marko.beautify.syntax": "html",
  "sortImports.onSave": false
}