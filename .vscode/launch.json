{
    "version": "0.2.0",
    "configurations": [
        {
            "args": [],
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development",
                "http_proxy": "",
                "https_proxy": "",
                "NODE_TLS_REJECT_UNAUTHORIZED": "0"
            },
            "name": "KIXng",
            "program": "${workspaceRoot}/src/StartServer.ts",
            "request": "launch",
            "sourceMaps": true,
            "stopOnEntry": false,
            "type": "node",
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "console": "integratedTerminal",
            "preLaunchTask": "gulp"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "KIXng Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts",
                "--reporter",
                "spec",
                "--compilers",
                "ts:ts-node/register",
                "--require",
                "source-map-support/register",
                "${workspaceRoot}/tests/**/*.test.ts"
            ],
            "env": {
                "NODE_ENV": "test",
                "http_proxy": "",
                "https_proxy": ""
            },
            "sourceMaps": true,
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        }
    ]
}