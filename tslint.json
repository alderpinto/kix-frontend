{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "no-unused-variable": true,
        "member-ordering": false,
        "arrow-parens": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "max-line-length": [
            true,
            {
                "limit": 120,
                "ignore-pattern": "^import |^export {(.*?)}",
                "check-strings": false
            }
        ],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": false,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": [
            false
        ],
        "no-console": [
            true,
            "log"
        ],
        "object-literal-sort-keys": [
            false
        ],
        "ordered-imports": [
            false
        ],
        "max-classes-per-file": [
            true,
            1
        ],
        "no-string-literal": false,
        "interface-name": [
            true,
            "always-prefix"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "variable-name": [
            true,
            "check-format",
            "allow-pascal-case"
        ],
        "triple-equals": [
            true
        ],
        "switch-default": true,
        "no-var-keyword": true,
        "no-shadowed-variable": true,
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "asyncArrow": "always"
            }
        ],
        "prefer-for-of": true
    },
    "jsRules": {
        "max-line-length": [
            true,
            120
        ]
    }
}