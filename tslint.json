{
    "extends": "tslint:recommended",
    "rules": {
        "member-ordering": false,
        "arrow-parens": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "max-line-length": [
            true,
            120
        ],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "quotemark": [
            "single"
        ],
        "trailing-comma": [
            false
        ],
        "no-console": [
            "log"
        ],
        "object-literal-sort-keys": [
            false
        ],
        "ordered-imports": [
            false
        ],
        "max-classes-per-file": [
            true,
            1
        ],
        "no-string-literal": false,
        "interface-name": [
            true,
            "always-prefix"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "variable-name": [
            "check-format"
        ],
        "triple-equals": [
            true
        ],
        "switch-default": true,
        "no-var-keyword": true,
        "no-shadowed-variable": true,
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "asyncArrow": "always"
            }
        ]
    },
    "jsRules": {
        "max-line-length": [
            true,
            120
        ]
    }
}