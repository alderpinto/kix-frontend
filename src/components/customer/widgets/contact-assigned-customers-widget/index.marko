<widget instanceId=state.instanceId title=state.title contentActions=state.actions>
    <@content>
        <if(state.contact && state.customerTable && !state.loading)>
            <div.customer-filter>
                <filter on-filter('filter')/>
            </div>
            <standard-table standardTable=state.customerTable/>
        </if>
        <else>
            <loading-spinner/>
        </else>
    </@content>
</widget>
