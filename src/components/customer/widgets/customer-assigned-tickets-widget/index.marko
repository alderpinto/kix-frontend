<widget key=state.instanceId instanceId=state.instanceId title=component.getTitle() contentActions=state.actions>
    <@content>
        <div.assigned-tickets-container>
            <widget key="customer-escalated-tickets-group" instanceId="customer-escalated-tickets-group"
                title=component.getEscalatedTicketsTitle()>
                <@content>
                    <if(state.escalatedTicketsTable && !state.loadEscalatedTickets)>
                        <div.ticket-filter>
                            <filter on-filter('filterEscalated')/>
                        </div>
                        <standard-table standardTable=state.escalatedTicketsTable/>
                    </if>
                    <else>
                        <loading-spinner/>
                    </else>
                </@content>
            </widget>
            <widget key="customer-reminder-tickets-group" instanceId="customer-reminder-tickets-group"
                title=component.getReminderTicketsTitle()>
                <@content>
                    <if(state.reminderTicketsTable && !state.loadReminderTickets)>
                        <div.ticket-filter>
                            <filter on-filter('filterReminder')/>
                        </div>
                        <standard-table standardTable=state.reminderTicketsTable/>
                    </if>
                    <else>
                        <loading-spinner/>
                    </else>
                </@content>
            </widget>
            <widget key="customer-new-tickets-group" instanceId="customer-new-tickets-group" title=component.getNewTicketsTitle()>
                <@content>
                    <if(state.newTicketsTable && !state.loadNewTickets)>
                        <div.ticket-filter>
                            <filter on-filter('filterNew')/>
                        </div>
                        <standard-table standardTable=state.newTicketsTable/>
                    </if>
                    <else>
                        <loading-spinner/>
                    </else>
                </@content>
            </widget>
            <widget key="customer-open-tickets-group" instanceId="customer-open-tickets-group"
                title=component.getOpenTicketsTitle()>
                <@content>
                    <if(state.openTicketsTable && !state.loadOpenTickets)>
                        <div.ticket-filter>
                            <filter on-filter('filterOpen')/>
                        </div>
                        <standard-table standardTable=state.openTicketsTable/>
                    </if>
                    <else>
                        <loading-spinner/>
                    </else>
                </@content>
            </widget>
            <widget key="customer-pending-tickets-group" instanceId="customer-pending-tickets-group"
                title=component.getPendingTicketsTitle()>
                <@content>
                    <if(state.pendingTicketsTable && !state.loadPendingTickets)>
                        <div.ticket-filter>
                            <filter on-filter('filterPending')/>
                        </div>
                        <standard-table standardTable=state.pendingTicketsTable/>
                    </if>
                    <else>
                        <loading-spinner/>
                    </else>
                </@content>
            </widget>
        </div>
    </@content>
</widget>
