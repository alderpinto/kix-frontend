<if(state.loadingCustomer || state.loadingConfig)>
    <loading-spinner/>
</if>
<else>
    <div.customer-details>
        <widget instanceId=state.instanceId minimizable=true title=component.getTitle()
            contentActions=component.getCustomerActions()>
            <@content>
                <ul.lane-list no-update>
                    <li key=component.getLaneKey()>
                        <tab-container tabWidgets=state.tabWidgets title="Kundeninformationen"/>
                    </li>
                    <for(lane in state.lanes)>
                        <li.lane key=component.getLaneKey()>
                            <include(component.getWidgetTemplate(lane.instanceId), { 
                                contextType: "MAIN", 
                                instanceId: lane.instanceId, 
                                customerId: state.customerId, 
                                type: component.getLaneWidgetType()
                                })/>
                        </li>
                    </for>
                </ul>
            </@content>
        </widget>
    </div>
</else>
