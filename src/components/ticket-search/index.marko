<div.ticket-search-container>
    <h1>${state.title}</h1>
    <if(state.searching)>
        <label>Suche lÃ¤uft ...</label>
    </if>
    <else>
        <div.search-group>
            <label>
                T#:
                <input type="text" value=state.values["TicketNumber"] on-change('searchVlaueChanged', 'TicketNumber')/>
            </label>
            <label>
                Titel:
                <input type="text" value=state.values["Title"] on-change('searchVlaueChanged', 'Title')/>
            </label>
        </div>
        <div.search-group>
            <label>
                Limit
                <input type="number" value=state.limit on-change('limitChanged')/>
            </label>
        </div>
        <button on-click('searchTickets')>Suche starten</button>
    </else>
</div>
<div.search-result>
    <h2>Suchergebnis (${state.tickets.length} Tickets in ${state.time} Sekunden)</h2>
    <ul>
        <for(ticket in state.tickets)>
            <li>${ticket.TicketNumber} - ${ticket.Title}</li>
        </for>
    </ul>
</div>
