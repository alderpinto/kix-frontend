<for(field in state.fields)>
    <if(component.showSeparator(field) && state.level === 0)>
        <div.form-field.form-separator-container>
            <div.form-separator/>
        </div>
    </if>
    <form-field field=field level=state.level formId=input.formId objectType=input.objectType>
        <@additionalFieldControls>
            <div.additionalFieldControls>
                <if(!field.asStructure)>
                    <if(component.canAdd(field))>
                        <button.button-without-text type="button" title="HinzufÃ¼gen" on-click('addField', field)>
                            <span.kix-icon-plus-blank/>
                        </button>
                    </if>
                    <else>
                        <span/>
                    </else>
                    <if(component.canRemove(field))>
                        <button.button-without-text type="button" title="Entfernen" on-click('removeField', field)>
                            <span.kix-icon-minus/>
                        </button>
                    </if>
                    <else>
                        <span/>
                    </else>
                </if>
            </div>
        </@additionalFieldControls>
    </form-field>
    <if(component.showSeparator(field) && state.level === 0)>
        <div.form-field.form-separator-container>
            <div.form-separator/>
        </div>
    </if>
</for>
