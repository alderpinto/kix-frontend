<div.table-container
    on-scroll("onScroll")
    style=("height:" + state.tableHeight)
    key=(state.table.getTableId() + "table-container")>
    <if(state.table)>
        <table.standard-table-NEW>
            <thead>
                <table-head-row table=state.table/>
            </thead>
            <if(state.rows)>
                <table-body
                    rows=state.rows
                    columnLength=state.columns.length
                    tableConfig=state.table.getTableConfiguration()
                    key=(state.table.getTableId() + "table-body")/>
            </if>
        </table>
    </if>
    <else>
        <loading-spinner/>
    </else>
</div>
