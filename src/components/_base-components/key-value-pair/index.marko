<div.key-value-pair>
    <if(state.showKey && input.key)>
        <span.key>
            <include(input.key)/>
        </span>
    </if>
    <if(state.showInfo && input.info)>
        <span.info>
            <include(input.info)/>
        </span>
    </if>
    <if(state.showValue && input.value)>
        <span.value>
            <include(input.value)/>
        </span>
    </if>
</div>
