<div.form>
    <if(state.form)>
        <for(field in state.form.fields)>
            <div.form-field>
                <span.field-label>
                    <if(field.required)>
                        <span.required-field>*</span>
                    </if>${field.label}
                </span>
                <span.field-icon/>
                <span.field-input>
                    <include(component.getInputComponent(field), { field })/>
                </span>
            </div>
        </for>
    </if>
</div>
