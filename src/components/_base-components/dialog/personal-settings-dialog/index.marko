<if(state.loading)>
    <loading-spinner/>
</if>
<else>
    <widget instanceId="personal-settings-dialog">
        <@content>
            <div.personal-settings-dialog-container>
                <if(state.formId)>
                    <main-form formId=state.formId key="personal-settings-form"/>
                </if>
                <div.dialog-button-container>
                    <button.cancel-button type="button" on-click("cancel") title="Abbrechen">
                        <span.kix-icon-close/>
                        Abbrechen
                    </button>
                    <button.submit-button type="button" on-click("submit") title="Speichern">
                        <span.kix-icon-check/>
                        Speichern
                    </button>
                </div>
            </div>
        </@content>
    </widget>
</else>
