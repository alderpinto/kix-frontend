<if(state.show)>
    <div.image-dialog-container>
        <div.image-shield/>
        <div.image-dialog>
            <div.image-dialog-header>
                <div.image-title>${state.image ? state.image.title : ""}</div>
                <div.image-dialog-close on-click("close")>
                    <span.kix-icon-close/>
                </div>
            </div>
            <div.image-container>
                <div.previous-image on-click("previousImage") title=state.translations["Translatable#Previous Image"]>
                    <span.kix-icon-circle-prior/>
                </div>
                <div.image>
                    <if(state.image)>
                        <img alt=state.imageTitle src=state.image.content/>
                    </if>
                </div>
                <div.next-image on-click("nextImage") title=state.translations["Translatable#Next Image"]>
                    <span.kix-icon-circle-next/>
                </div>
            </div>
        </div>
    </div>
</if>
