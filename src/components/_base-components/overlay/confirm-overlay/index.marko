<p>
    <translation-string pattern=input.text/>
</p>
<div.confirm-overlay-buttons>
    <button.form-blank-cancel-button type="button" on-click("closeOverlay", false) title=component.getButtonLabel()>
        <span.kix-icon-close/>
        <translation-string pattern=component.getButtonLabel()/>
    </button>
    <button.form-blank-submit-button type="button" on-click("closeOverlay", true) title=component.getButtonLabel(true)>
        <span.kix-icon-check/>
        <translation-string pattern=component.getButtonLabel(true)/>
    </button>
</div>
