<div.key-value-pair.clearfix>
    <span.key>${component.getPropertyName()}:</span>
    <if(input.info)>
        <span.info>
            <include(input.info)/>
        </span>
    </if>
    <span.value class=component.getValueClasses()>
        ${component.getPropertyDisplayText()}
        <if(input.icon)>
            <include(input.icon)/>
        </if>
    </span>
</div>
