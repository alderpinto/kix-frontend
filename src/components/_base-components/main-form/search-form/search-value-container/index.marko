<if(state.loading)>
    <loading-spinner/>
</if>
<else>
    <for(searchValue in state.searchValues | status-var=loop)>
        <div.form-search-value>
            <span>
                <if(loop.getIndex() > 0)>und</if>
            </span>
            <form-list nodes=state.propertyNodes selectedNodes=[searchValue.currentPropertyNode]
                on-nodesChanged('propertyChanged', searchValue)/>
            <form-list nodes=searchValue.operationNodes selectedNodes=[searchValue.currentOperationNode]
                on-nodesChanged('operationChanged', searchValue)/>
            <div.search-value>
                <if(searchValue.currentPropertyNode && searchValue.currentOperationNode)>
                    <if(searchValue.isDropdown)>
                        <form-list nodes=searchValue.nodes selectedNodes=searchValue.currentValueNodes
                            on-nodesChanged('treeValueChanged', searchValue) multiselect=searchValue.isMultiselect/>
                    </if>
                    <else-if(searchValue.isDate)>
                        <input type=date/>
                    </else-if>
                    <else-if(searchValue.isDateTime)>
                        <input.input-style type="date" on-change('dateValueChanged', searchValue) value=searchValue.date/>
                        <input.input-style type="time" on-change('timeValueChanged', searchValue) value=searchValue.time/>
                    </else-if>
                    <else>
                        <input.input-style value=searchValue.currentValue type="text" on-change('textValueChanged', searchValue)/>
                    </else>
                </if>
            </div>
            <if(state.searchValues.length > 1)>
                <button.form-button.button-without-text type="button" title="VerknÃ¼pfung zuordnen"
                    on-click('removeValue', searchValue)>
                    <span.kix-icon-minus/>
                </button>
            </if>
        </div>
    </for>
</else>
