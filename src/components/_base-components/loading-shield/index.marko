<div.loading-shield>
    <div.loading-info>
        <loading-spinner/>
        <span>${input.loadingHint}</span>
        <if(state.time && !state.cancel)>
            <timer time=state.time/>
        </if>
        <else-if(state.cancel)>
            <span>
                <translation-string pattern="Translatable#Cancel Process"/>
            </span>
        </else-if>
        <if(state.cancelCallback)>
            <button.cancel-button type="button" on-click("cancel") title="Cancel" disabled=state.cancel>
                <span.kix-icon-close/>
                <translation-string pattern="Translatable#Cancel"/>
            </button>
        </if>
    </div>
</div>
