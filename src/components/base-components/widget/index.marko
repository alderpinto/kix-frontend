<div.widget-header.clearfix>
    <span.header-left>
        <h3>${data.widget.title}</h3>
        <!-- Hier Filter oder Ã¤hnliche Elemente rein-->
    </span>
    <span.header-right>
        <for(action in state.actions)>
            <span>${action.name}</span>
        </for>
        <span class="kix-icon icon-dummy configuration ${state.configurationMode ? '' : 'hidden'}" on-click('configClicked')/>
    </span>
</div>
<div.widget-content>
    $ let template = require('../../' + data.widget.template);
    <include(template, {
        configuration: state.contentConfiguration
    })/>
</div>
<div>
    <widget-configuration-overlay widget=data.widget showOverlay=state.showConfiguration
        configuration=state.contentConfiguration on-saveConfigurationOverlay('saveConfigurationOverlay')
        on-cancelConfigurationOverlay('closeConfigurationOverlay')/>
</div>
