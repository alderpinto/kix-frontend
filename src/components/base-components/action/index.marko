<span.action on-click('handleAction') class=(state.running ? "action-disabled" : "")>
    <span.kix-icon.icon-dummy/>
    <if(state.showName)>
        <span>${state.action.name}</span>
    </if>
</span>
<span>
    <if(state.template)>
        <div>
            <main-dialog>
                <@title>Aktion: ${data.action.name}</@title>
                <@body>
                    <include(state.template, {
                action: state.action,
                contentData: data.contentData
            })/>
                </@body>
                <@button>
                    <button on-click('runActionClicked')>Ausf√ºhren</button>
                    <button on-click('cancelActionClicked')>Abbrechen</button>
                </@button>
            </main-dialog>
        </div>
    </if>
</span>
