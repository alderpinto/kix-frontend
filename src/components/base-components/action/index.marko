<span.action on-click('handleAction') class=(state.running ? "action-disabled" : "")>
    <span.kix-icon.icon-dummy/>
    <span>${state.action.name}</span>
</span>
<span>
    <if(state.template)>
        <action-overlay template=state.template action=state.action contentData=data.contentData
            on-runAction('runActionClicked') on-cancelAction('cancelActionClicked')/>
    </if>
</span>
