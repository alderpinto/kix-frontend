<div.bar-icon class=(state.configurationMode || state.showConfigurationWidget ? "config-mode" : "")>
    <span.kix-icon.icon-dummy class=(state.showConfigurationWidget ? "" : "icon-asterisk") on-click('toggleConfigurationWidget')/>
</div>
<if(state.translations && state.showConfigurationWidget)>
    <div.configuration-widget>
        <widget minimizable=false>
            <@title>
                <span.kix-icon.icon-dummy.icon-asterisk/>${component.getTranslation(component.translationIds.TITLE)}
            </@title>
            <@content>
                <if(state.configurationMode)>
                    <h4>Home Dashboard</h4>
                    <!-- TODO: get real dashboard name (home, ticket, ...) and its translation, maybe from parent (input.name) -->
                    <!-- <h4>${component.getTranslation(component.translationIds.DASHBOARD_NAME)}</h4> -->
                    ${component.getTranslation(component.translationIds.DESCRIPTION)}
                    <button on-click('openConfigurationDialog')>${component.getTranslation(component.translationIds.OPEN_DIALOG)}</button>
                    ${component.getTranslation(component.translationIds.DESCRIPTION_INFO)}
                    <hr/>
                    <button on-click('toggleConfigurationMode')>${component.getTranslation(component.translationIds.STOP)}</button>
                </if>
                <else>
                    ${component.getTranslation(component.translationIds.PRE_DESCRIPTION)}
                    <button on-click('toggleConfigurationMode')>${component.getTranslation(component.translationIds.START)}</button>
                </else>
            </@content>
        </widget>
    </div>
</if>
<if(state.showConfigurationDialog)>
    <div.configuration-dialog>
        <main-dialog>
            <@title>Dashboard Config - Paltzhalter-Titel</@title>
            <@body>Hehe ... is noch leer :D</@body>
            <@button>
                <button on-click('closeConfigurationDialog')>Schlie√üen</button>
            </@button>
        </main-dialog>
    </div>
</if>
<if(state.configurationMode && !state.showConfigurationDialog)>
    <main-overlay/>
</if>
