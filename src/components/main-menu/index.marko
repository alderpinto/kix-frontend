<div.menu-col>
    <ul.main-menu class=(state.showText ? "" : "image-only")>
        <for(menuEntry in state.primaryMenuEntries)>
            <li class=(menuEntry.active ? "active" : "")>
                <a href="#" on-click('menuClicked', menuEntry.contextId)>
                    <span class="hover-label">${menuEntry.text}</span>
                    <span class="label-wrapper">
                        <span class="kix-icon-${menuEntry.icon}"/>
                        <span class="inline-label">
                            <br/>${menuEntry.text}
                        </span>
                    </span>
                </a>
            </li>
        </for>
    </ul>
    <ul.user-menu class=(state.showText ? "" : "image-only")>
        <for(menuEntry in state.secondaryMenuEntries)>
            <li class=(menuEntry.active ? "active" : "")>
                <a href="#" on-click('menuClicked', menuEntry.contextId)>
                    <span class="menu-item-wrapper cf">
                        <span class="hover-label">${menuEntry.text}</span>
                        <span class="label-wrapper">
                            <span class="kix-icon-${menuEntry.icon}"/>
                            <span class="inline-label">
                                <br/>${menuEntry.text}
                            </span>
                        </span>
                    </span>
                </a>
            </li>
        </for>
    </ul>
</div>
