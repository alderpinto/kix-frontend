<div class="login-wrapper">
    <div class="login-page clearfix">
        <div class="login-background"/>
        <if(state.loading)>
            <loading-spinner/>
        </if>
        <else>
            <div class="login-dialog">
                <div class="dialog-header">
                    <div#kix-logo>
                        <img alt="kix-logo" src="static/img/kix-logo.png"/>
                    </div>
                    <h1>
                        <translation-string pattern="Translatable#Welcome to KIX"/>
                    </h1>
                </div>
                <if(state.error || state.logout || state.unsupportedBrowser)>
                    <div class="dialog-message-area">
                        <if(state.unsupportedBrowser)>
                            <div class="message message-hint">
                                <span.kix-icon-warnsign/>
                                <translation-string pattern="Translatable#This browser is not supported. You may encounter malfunctions."/>
                            </div>
                        </if>
                        <if(state.error)>
                            <div class="message message-error">
                                <span.kix-icon-warnsign/>
                                <translation-string pattern="Translatable#Login failed"/>
                            </div>
                        </if>
                        <else-if(state.logout)>
                            <div class="message message-success">
                                <span.kix-icon-icircle/>
                                <translation-string pattern="Translatable#You have successfully logged out."/>
                            </div>
                        </else-if>
                    </div>
                </if>
                <div class="dialog-content" on-keydown("keyDown")>
                    <label>
                        <span>
                            <translation-string pattern="Translatable#User name"/>:
                        </span>
                        <input.input-style type="text" name="username" tabindex="1" key="login-user-name"/>
                    </label>
                    <label>
                        <span>
                            <translation-string pattern="Translatable#Password"/>:
                        </span>
                        <input.input-style type="password" name="password" tabindex="2" key="login-user-password"/>
                    </label>
                    <div class="dialog-buttons">
                        <button.special-button type="button" on-click("login") tabindex="3">
                            <span.kix-icon-check/>
                            <translation-string pattern="Translatable#Login"/>
                        </button>
                    </div>
                </div>
            </div>
        </else>
        <kix-footer releaseInfo=input.releaseInfo imprintLink=input.imprintLink unauthorized=true/>
    </div>
</div>
