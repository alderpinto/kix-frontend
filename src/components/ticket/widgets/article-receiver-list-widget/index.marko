<widget instanceId="article-receiver-list-widget" minimizable=false title=state.title>
    <@icon>
        <span.kix-icon-man/>
    </@icon>
    <@content>
        <ul.receiver-list-container>
            <for(receiver in state.receiverList)>
                <li title=receiver.email>${receiver.realName}</li>
            </for>
        </ul>
    </@content>
</widget>
