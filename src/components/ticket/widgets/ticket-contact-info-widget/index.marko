<widget instanceId=input.instanceId isLoading=(!state.contact) minimizable=false>
    <@icon>
        <span.kix-icon-man/>
    </@icon>
    <@title>
        <if(state.widgetConfiguration)>${state.widgetConfiguration.title}</if>
        <else>Ansprechpartnerinfo</else>
    </@title>
    <@content>
        <if(state.contact)>
            <contact-info contact=state.contact/>
        </if>
    </@content>
    <@filter/>
    <@contentActions/>
</widget>
