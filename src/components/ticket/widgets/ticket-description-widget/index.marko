<widget instanceId=state.instanceId title=(state.widgetConfiguration ? state.widgetConfiguration.title : "")
    contentActions=state.actions>
    <@icon/>
    <@content>
        <div.description-container>
            <widget type=32 title="Beschreibung" key=("Widget" + Math.random())>
                <@content>
                    <div.description-attachments>
                        <b>Anlagen:</b>
                        <ticket-article-attachment-list article=state.firstArticle/>
                    </div>
                    <div.description-text-wrapper>
                        <ticket-article-content article=state.firstArticle/>
                    </div>
                </@content>
            </widget>
            <widget type=32 title="Anmerkungen" key=("Widget" + Math.random())>
                <@content>
                    <div.ticket-notes>${state.ticketNotes}</div>
                </@content>
            </widget>
        </div>
    </@content>
</widget>
