<widget instanceId=input.instanceId isLoading=(!state.customer) minimizable=false>
    <@icon>
        <span.kix-icon-man/>
    </@icon>
    <@title>
        <if(state.widgetConfiguration)>${state.widgetConfiguration.title}</if>
        <else>Kundeninfo</else>
    </@title>
    <@content>
        <if(state.customer)>
            <customer-info customer=state.customer/>
        </if>
    </@content>
    <@filter/>
    <@contentActions/>
</widget>
