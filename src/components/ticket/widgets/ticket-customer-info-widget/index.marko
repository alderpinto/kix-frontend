<widget instanceId=input.instanceId minimizable=false contextType=state.contextType
    title=(state.widgetConfiguration ? state.widgetConfiguration.title : "Kunde") key=input.instanceId>
    <@icon>
        <span class=(state.widgetConfiguration && state.widgetConfiguration.icon ? state.widgetConfiguration.icon : "kix-icon-man")/>
    </@icon>
    <@content>
        <if(state.customerId)>
            <ticket-customer-info customerId=state.customerId/>
        </if>
    </@content>
</widget>
