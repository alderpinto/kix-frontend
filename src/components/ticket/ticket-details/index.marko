<div.ticket-details>
    <if(state.loading)>
        <loading-spinner/>
    </if>
    <else-if(state.ticket)>
        <widget minimizable=true actions=state.generalActions instanceId="ticket-details-widget">
            <@icon/>
            <@title>${component.getTitle()}</@title>
            <@contentActions>
                <div.ticket-actions-wrapper>
                    <action-list list=state.ticketActions/>
                </div>
            </@contentActions>
            <@content>
                <ul.lane-list>
                    <li.lane.tabs.clearfix>
                        <widget type=8>
                            <@icon/>
                            <@title>Ticketinformationen</@title>
                            <@content>
                                <ul.tab-list>
                                    <for(tab in state.tabs)>
                                        <li class=(state.activeTabId === tab.instanceId ? "active" : "") on-click('tabClicked', tab.instanceId)>
                                            ${tab.configuration.title}
                                        </li>
                                    </for>
                                </ul>
                                <div.tab-content>
                                    <if(state.activeTabId)>
                                        <include(component.getWidgetTemplate(state.activeTabId), {type: 16, instanceId: state.activeTabId, ticketId: state.ticket.TicketID})/>
                                    </if>
                                </div>
                            </@content>
                            <@filter/>
                            <@contentActions/>
                        </widget>
                    </li>
                    <for(lane in state.lanes)>
                        <li.lane.clearfix>
                            <include(component.getWidgetTemplate(lane.instanceId), { instanceId: lane.instanceId, ticketId: state.ticket.TicketID})/>
                        </li>
                    </for>
                </ul>
            </@content>
            <@filter/>
        </widget>
        <article-list-widget ticketId=state.ticketId instanceId="article-list"/>
    </else-if>
    <else>
        <span>Keine Ticketdaten (ID: ${state.ticketId}) verf√ºgbar.</span>
    </else>
</div>
