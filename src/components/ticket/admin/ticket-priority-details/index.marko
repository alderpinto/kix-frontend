<if(state.error)>
    <span.error>${state.error}</span>
</if>
<else-if(state.loading)>
    <loading-spinner/>
</else-if>
<else>
    <div.details-container>
        <widget instanceId=state.instanceId minimizable=true title=state.title contentActions=state.actions>
            <@content>
                <ul.lane-list no-update>
                    <li>
                        <tab-container tabWidgets=state.tabWidgets title="PrioritÃ¤t Informationen" showSidebar=false/>
                    </li>
                    <for|lane| of=state.lanes>
                        <li.lane key=lane.instanceId>
                            <${component.getWidgetTemplate(lane.instanceId)} ...{
                                contextType: "MAIN",
                                instanceId: lane.instanceId,
                                type: component.getLaneWidgetType()
                            }/>
                        </li>
                    </for>
                </ul>
            </@content>
        </widget>
        <div.ticket-priority-content key="ticket-priority-content">
            <for|contentWidget| of=state.contentWidgets>
                <${component.getWidgetTemplate(contentWidget.instanceId)} ...{
                    contextType: "MAIN",
                    instanceId: contentWidget.instanceId
                }/>
            </for>
        </div>
    </div>
</else>
