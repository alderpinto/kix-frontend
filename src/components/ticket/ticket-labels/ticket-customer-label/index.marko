<key-value-pair showKey=input.showLabel>
    <@key>${state.label}</@key>
    <@info>
        <if(state.customer)>
            <overlay-info-icon>
                <@title>Kundeninfo</@title>
                <@content>
                    <div>${state.customer.CustomerID}</div>
                    <div>${state.customer.CustomerCompanyName}</div>
                    <div>
                        <strong>Stra√üe:</strong> ${state.customer.CustomerCompanyStreet}
                    </div>
                    <div>
                        <strong>Stadt:</strong> ${state.customer.CustomerCompanyCity}
                    </div>
                    <div>
                        <strong>Land:</strong> ${state.customer.CustomerCompanyCountry}
                    </div>
                </@content>
            </overlay-info-icon>
        </if>
    </@info>
    <@value>
        <span.text>${state.displayValue}</span>
    </@value>
</key-value-pair>
