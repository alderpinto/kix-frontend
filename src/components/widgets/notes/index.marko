<div>
    <widget>
        <@overlay>
            <include(input.dragoverlay)/>
        </@overlay>
        <@icon>
            <span class="kix-icon icon-dummy"/>
        </@icon>
        <@title>Notizen</@title>
        <@content>
            <editor inline=true value=state.notes resize=false on-valueChanged('valueChanged')/>
            <!-- // TODO: remove - just for testing -->
            <button title="Change notes" on-click('changeNotes')>Change Notes</button>
        </@content>
        <@filter>
            <span/>
        </@filter>
        <@actions>
            <span class="kix-icon icon-dummy configuration ${input.configurationMode ? '' : 'not-visible'}"
                on-click('showConfigurationClicked')/>
        </@actions>
    </widget>
    <if(state.showConfiguration)>
        <div>
            <main-dialog>
                <@title>Konfiguration: Ticketliste</@title>
                <@body>
                    <notes-configuration/>
                </@body>
                <@button>
                    <button on-click('saveConfiguration')>Speichern</button>
                    <button on-click('cancelConfiguration')>Abbrechen</button>
                </@button>
            </main-dialog>
        </div>
    </if>
</div>
