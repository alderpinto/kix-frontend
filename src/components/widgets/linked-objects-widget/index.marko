<widget instanceId=state.instanceId contextType="MAIN" title=state.widgetTitle contentActions=state.actions>
    <@content>
        <if(state.loading)>
            <loading-spinner/>
        </if>
        <else-if(state.linkedObjectGroups.length)>
            <for(group in state.linkedObjectGroups | status-var=loop)>
                <widget instanceId="linked-object-group" key=("linked-object-group-" + loop.getIndex()) title=group[0]>
                    <@content>
                        <standard-table standardTable=group[1]/>
                    </@content>
                </widget>
            </for>
            $ component.setGroupMinimizedStates();
        </else-if>
        <else>
            <span>Es sind keine verkn√ºpften Objekte vorhanden.</span>
        </else>
    </@content>
</widget>
