<widget instanceId=state.instanceId contextType="MAIN" title=state.title contentActions=state.actions>
    <@content>
        <div.link-groups class={
            "show-object": state.linkedObjectGroups && !state.setMinimizedState
        }>
            <if(state.linkedObjectGroups && state.linkedObjectGroups.length)>
                <for|group, index| of=state.linkedObjectGroups>
                    <widget instanceId="linked-object-group" key=("linked-object-group-" + index) title=group[0]>
                        <@content>
                            <standard-table-NEW table=group[1]/>
                        </@content>
                    </widget>
                </for>
                $ component.setGroupMinimizedStates();
            </if>
            <else>
                <translation-string pattern="Translatable#No linked objects available."/>
            </else>
        </div>
    </@content>
</widget>
