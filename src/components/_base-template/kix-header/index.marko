<header>
    <img#logo alt="KIX18" src="/static/img/kix-logo.png"/>
    <div>
        <!-- Neues Objekt -->
        <if(state.allowNew)>
            <button.special-button type="button" on-click("openDialog")>
                <span.kix-icon-plus-blank/>
                <translation-string pattern="Translatable#New"/>
            </button>
            <div.header-separator/>
        </if>
        <!-- Lesezeichen & Suchvorlagen -->
        <bookmarks/>
        <div.header-separator/>
        <!-- Schnellsuche -->
        <quick-search/>
        <toolbar/>
        <div.kix-toolbar>
            <div.toolbar-group>
                <div>
                    <div.action-icon>
                        <span.kix-icon-gear.as-button
                            title=state.translations["Translatable#Personal Settings"]
                            on-click("showPersonalSettings")/>
                    </div>
                </div>
                <div>
                    <div.action-icon>
                        <span.kix-icon-exchange.as-button
                            title=state.translations["Translatable#Switch to customer portal."]
                            on-click("showTemporaryComingSoon")/>
                    </div>
                </div>
                <link-target routingConfiguration=component.getReleaseRoutingConfig()>
                    <@content>
                        <div>
                            <div.action-icon>
                                <span.kix-icon-query.as-button title=state.translations["Translatable#Help"]/>
                            </div>
                        </div>
                    </@content>
                </link-target>
                <div>
                    <div.action-icon>
                        <a href="/auth?logout" on-click("logout")>
                            <span.kix-icon-logout title=state.translations["Translatable#Logout"]/>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
