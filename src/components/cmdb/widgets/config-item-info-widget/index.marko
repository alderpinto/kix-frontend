<widget instanceId=state.instanceId title=(state.widgetConfiguration ? state.widgetConfiguration.title : "")
    contentActions=state.actions>
    <@content>
        <if(state.loading)>
            <loading-spinner/>
        </if>
        <else-if(!state.configItem)>
            <span.error>No Config Item available.</span>
        </else-if>
        <else>
            <div.configItem-information-container>
                <div>
                    <object-property-label object=state.configItem property=component.properties.CLASS
                        labelProvider=component.labelProvider/>
                </div>
                <div>
                    <object-property-label object=state.configItem property=component.properties.NAME
                        labelProvider=component.labelProvider/>
                </div>
                <div>
                    <object-property-label object=state.configItem property=component.properties.CUR_DEPL_STATE_ID
                        labelProvider=component.labelProvider>
                        <@icon>
                            <icon icon=component.getIcon("CurDeplStateID", state.configItem.CurDeplStateID)/>
                        </@icon>
                    </object-property-label>
                </div>
                <div>
                    <object-property-label object=state.configItem property=component.properties.CUR_INCI_STATE_ID
                        labelProvider=component.labelProvider>
                        <@icon>
                            <icon icon=component.getIcon("CurInciStateID", state.configItem.CurInciStateID)/>
                        </@icon>
                    </object-property-label>
                </div>
                <div>
                    <object-property-label object=state.configItem property=component.properties.CREATE_TIME
                        labelProvider=component.labelProvider/>
                </div>
                <div>
                    <object-property-label object=state.configItem property=component.properties.CREATE_BY
                        labelProvider=component.labelProvider/>
                </div>
                <div>
                    <object-property-label object=state.configItem property=component.properties.CHANGE_TIME
                        labelProvider=component.labelProvider/>
                </div>
                <div>
                    <object-property-label object=state.configItem property=component.properties.CHANGE_BY
                        labelProvider=component.labelProvider/>
                </div>
            </div>
        </else>
    </@content>
</widget>
