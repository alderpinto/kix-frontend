<form-list
    placeholder=state.placeholder
    on-focusLost("focusLost")
    on-nodesChanged("stateChanged")
    invalid=state.invalid
    multiselect=false
    readonly=state.field.readonly
    loadNodes=state.loadNodes/>
<if(state.pending)>
    <div.pending-state class={
        invalid: state.invalid
    }>
        <span>
            *<translation-string pattern="Translatable#Wait until"/>:
        </span>
        <input.input-style.date-input
            type="date"
            pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}"
            on-change("dateChanged")
            value=state.selectedDate
            readonly=state.field.readonly
            disabled=state.field.readonly/>
        <span.kix-icon-calendar/>
        <span>-</span>
        <select.input-style.time-input
            required
            on-change("timeChanged")
            readonly=state.field.readonly
            disabled=state.field.readonly>
            <for|time| of=state.times>
                <option selected=(state.selectedTime === time)>${time}</option>
            </for>
        </select>
        <span.kix-icon-time/>
    </div>
</if>
