<if(state.channels && !state.loading && state.field)>
    <div.channel-list>
        <for|channel| of=state.channels>
            <div.channel-item
                on-click("channelClicked", channel)
                title=component.getDisplayText(channel)
                class={
                    active: component.isActive(channel),
                    readonly: state.field.readonly
                }>
                <span.channel-icon>
                    <icon icon=component.getIcon(channel)/>
                </span>
                <span.channel-text>${component.getDisplayText(channel)}</span>
            </div>
        </for>
        <if(state.noChannel)>
            <div.channel-item
                on-click("channelClicked", null)
                title=state.translations["Translatable#No Article"]
                class={
                    active: component.isActive(null)
                }>
                <span.channel-icon>
                    <icon icon="kix-icon-unselect"/>
                </span>
                <span.channel-text>
                    <translation-string pattern="Translatable#No Article"/>
                </span>
            </div>
        </if>
    </div>
</if>
