<if(state.prepared)>
   <if(!state.readonly)>
      <textarea.form-control
         type="text"
         rows=5
         value=state.value
         on-keydown("valueChanged")
      />
   </if>
   <else-if(state.readonly)>
      <textarea.form-control
         type="text"
         rows=5
         value=state.value
         on-keydown("valueChanged")
         disabled=state.readonly
         readonly=state.readonly
      />
   </else-if>
</if>
