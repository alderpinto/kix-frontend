<widget
    instanceId="edit-linked-objects-dialog"
    icon="kix-icon-link"
    title=state.title>
    <@content>
        <if(state.mainObject)>
            <div.edit-linked-objects-dialog-container>
                <div.table-head>
                    <span>
                        <translation-string
                            pattern="Translatable#Existing Links ({0})"
                            placeholders=[state.linkObjectCount]/>
                    </span>
                </div>
                <if(state.table)>
                    <standard-table-NEW table=state.table/>
                </if>
                <div.dialog-button-container>
                    <if(state.allowDelete)>
                        <button.form-blank-cancel-button
                            type="button"
                            on-click("markToDelete")
                            title=state.translations["Translatable#Delete Link"]>
                            <span.kix-icon-trash/>
                            <translation-string pattern="Translatable#Delete Link"/>
                        </button>
                    </if>
                </div>
            </div>
            <widget
                instanceId="add-linked-objects-form"
                minimizable=true
                minimized=false
                title="Translatable#Add new Links">
                <@content>
                    <link-object-dialog
                        linkDescriptions=state.linkDescriptions
                        objectType=state.mainObject.KIXObjectType
                        rootObject=state.mainObject
                        on-linksAdded("linksAdded")/>
                </@content>
            </widget>
            <div.dialog-control>
                <div.dialog-button-container>
                    <button.button-without-text.cancel-button
                        type="button"
                        on-click("cancel")
                        title=state.translations["Translatable#Cancel"]>
                        <span.kix-icon-close/>
                    </button>
                    <button.button-without-text.submit-button
                        type="button"
                        on-click("submit")
                        title=state.translations["Translatable#Submit"]
                        disabled=!state.canSubmit>
                        <span.kix-icon-check/>
                    </button>
                </div>
            </div>
        </if>
    </@content>
</widget>
