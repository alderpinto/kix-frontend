<div.refresh-toast.toast-content>
    <div.toast-icon>
        <icon icon="kix-icon-info"/>
    </div>
    <div.toast-text>
        <b title=(input.title || "")><translation-string pattern=(input.title || "")/></b>
        <p>
            <translation-string pattern=state.message/>
            <div.refresh-links>
                <a on-click("refreshClicked")>
                    <translation-string pattern="Translatable#Refresh Page"/>
                </a>
                <a on-click("dontShowClicked")>
                    <translation-string pattern="Translatable#Don't show again"/>
                </a>
            </div>
        </p>
    </div>
    <div.close-button>
        <span.kix-icon-close on-click("close")/>
    </div>
</div>
