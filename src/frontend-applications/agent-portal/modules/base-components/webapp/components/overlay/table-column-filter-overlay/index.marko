<if(state.prepared)>
    <if(state.hasListFilter)>
        <form-list-tree treeId=state.treeId on-nodeClicked("nodeClicked")/>
    </if>
    <else>
        <input.input-style
            type="text"
            placeholder=state.placeholder
            value=state.filterText
            on-change("textFilterValueChanged")
            on-keydown("filterKeyDown")
            key="column-filter-input"/>
    </else>
</if>
