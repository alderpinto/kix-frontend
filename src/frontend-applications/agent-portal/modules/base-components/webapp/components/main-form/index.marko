<div>
    <form-page-menu
        pages=(state.formInstance ? state.formInstance.form.pages : [])
        activePageIndex=state.activePageIndex
        before=true
        on-showPage("showPage")/>
    <form.form autocomplete="off">
        <input id="username" style="display:none" type="text" name="fakeusernameremembered"/>
        <input id="password" style="display:none" type="password" name="fakepasswordremembered" autocomplete="off"/>
        <if(state.isSearchContext)>
            <search-form formId=state.formId objectType=state.objectType/>
        </if>
        <else-if(state.formInstance && state.formInstance.form && state.formId)>
            <for|page, index| of=state.formInstance.form.pages>
                <${state.formInstance.form.pages.length > 1 ? "div" : ""} class={
                    active: index === state.activePageIndex,
                    "form-page": true
                }>
                    <for|group| of=page.groups>
                        <if(page.groups.length > 1 || page.showSingleGroup)>
                            <widget
                                instanceId="form-group"
                                title=group.name
                                on-minimizedChanged("handleFormGroupMinimizeState", group.name)
                                key=group.name>
                                <@content>
                                    <field-container
                                        fields=group.formFields
                                        formId=state.formId
                                        additionalFieldControlsNeeded=state.additionalFieldControlsNeeded
                                        draggable=group.draggableFields/>
                                </@content>
                            </widget>
                            <if(group.separatorString)>
                                <div.separator>${group.separatorString}</div>
                            </if>
                        </if>
                        <else>
                            <field-container
                                fields=group.formFields
                                formId=state.formId
                                additionalFieldControlsNeeded=state.additionalFieldControlsNeeded
                                draggable=group.draggableFields/>
                        </else>
                    </for>
                </>
            </for>
        </else-if>
    </form>
    <form-page-menu
        pages=(state.formInstance ? state.formInstance.form.pages : [])
        activePageIndex=state.activePageIndex
        on-showPage("showPage")/>
</div>
