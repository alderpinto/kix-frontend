<if(state.field)>
    <input.input-style
        class={
                invalid: state.invalid
            }
        value=state.currentValue
        type=component.getInputType(state.isPasswordVisible)
        maxlength=state.field.maxLength
        placeholder=state.placeholder
        autocomplete=component.getAutoCompleteOption()
        required=input.required
        readonly=state.field.readonly
        disabled=state.field.readonly
        on-blur("focusLost")
        on-input("valueChanged")/>
    <if(state.isPasswordInit)>
        <div.d-flex.align-items-center.justify-content-center.px-2 role="button" on-click("togglePasswordVisible")>
            <i.far class={
                'fa-eye': state.isPasswordVisible,
                'fa-eye-slash': !state.isPasswordVisible
            }></i>
        </div>
    </if>
</if>
