<if(state.prepared && state.field)>
    <if(!state.useEditor)>
        <textarea.input-style
            key=state.field.instanceId
            rows=state.rows
            cols=50
            class={
                invalid: state.invalid
            }
            maxlength=state.field.maxLength
            placeholder=state.placeholder
            readonly=state.field.readonly
            on-blur("focusLost")
            on-change("valueChanged")>${state.currentValue}</textarea>
    </if>
    <else>
        <span no-update>
            <textarea.input-style key=state.field.instanceId>${state.currentValue}</textarea>
        </span>
    </else>
</if>
