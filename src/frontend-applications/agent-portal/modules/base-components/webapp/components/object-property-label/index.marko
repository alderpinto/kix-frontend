<div.key-value-pair class={
    "show-object": state.propertyDisplayText !== null || !state.hasText
}>
    <if(!state.propertyName)>
        <div.key title=input.propertyValue>
            <${input.propertyValue}/>
        </div>
    </if>
    <else>
        <div.key title=state.propertyName>
            <span.property-name>${state.propertyName}</span>
        </div>
    </else>
    <div.info>
        <if(input.info && state.propertyDisplayText !== null)>
            <${input.info}/>
        </if>
    </div>
    <div.value title=(!input.noValueTitle ? state.propertyDisplayText : "") class=component.getValueClasses()>
        <if(input.value)>
            <${input.value}/>
        </if>
        <else-if(state.propertyDisplayText !== null)>
            <link-target routingConfiguration=input.routingConfiguration objectId=input.objectId>
                <@content>
                    <if(state.hasText)>
                        <span>${state.propertyDisplayText}</span>
                    </if>
                </@content>
            </link-target>
            <if(state.propertyIcon)>
                <icon icon=state.propertyIcon/>
            </if>
        </else-if>
    </div>
</div>
