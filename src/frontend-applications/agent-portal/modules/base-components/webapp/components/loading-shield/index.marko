<div.loading-shield>
    <div.loading-info>
        <loading-spinner/>
        <span>
            <translation-string pattern=input.loadingHint/>
        </span>
        <if(state.time && !state.cancel)>
            <timer time=state.time/>
        </if>
        <else-if(state.cancel)>
            <span>
                <translation-string pattern="Translatable#Cancel Process"/>
            </span>
        </else-if>
        <if(state.cancelCallback)>
            <button.default-button
                type="button"
                on-click("cancel")
                title=(state.cancelButtonText ? state.cancelButtonText : state.translations["Translatable#Cancel"])
                disabled=state.cancel>
                <span.kix-icon-close/>
                ${state.cancelButtonText ? state.cancelButtonText : state.translations["Translatable#Cancel"]}
            </button>
        </if>
    </div>
</div>
