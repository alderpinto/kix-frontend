<widget-container widgets=state.widgets/>
<div.dialog-control>
    <dialog-notifiactions/>
    <if(state.processing)>
        <div.dialog-loading-text>
            <loading-spinner/>
        </div>
    </if>
    <div.dialog-button-container>
        <button.cancel-button
            disabled=state.processing
            type="button"
            on-click("cancel")
            title=state.translations["Translatable#Cancel"]>
            <span.kix-icon-close/>
            <span>${state.translations["Translatable#Cancel"]}</span>
        </button>
        <button.submit-button
            disabled=state.processing
            type="button"
            on-click("submit")
            title=state.translations["Translatable#Save"]>
            <span.kix-icon-check/>
            <span>${state.translations["Translatable#Save"]}</span>
        </button>
    </div>
</div>
