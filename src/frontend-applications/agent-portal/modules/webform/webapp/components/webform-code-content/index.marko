<div.web-form-code>
    <if(!state.loading)>
        <widget
            instanceId="web-form-code-group"
            title=state.translations["Translatable#Include this code into the <head> area of your webpage."]>
            <@content>
                <if(state.headCode)>
                    <p>
                        <translation-string pattern="Translatable#Do not forget to replace <YOUR_FRONTEND_HOST> placeholder."/>
                    </p>
                    <editor readOnly=true value=state.headCode useReadonlyStyle=true/>
                </if>
            </@content>
        </widget>
        <widget
            instanceId="web-form-code-group"
            title=state.translations["Translatable#Place this code wherever you want to open the webform dialog."]>
            <@content>
                <if(state.buttonCode)>
                    <editor readOnly=true value=state.buttonCode useReadonlyStyle=true/>
                </if>
            </@content>
        </widget>
    </if>
    <else>
        <table-placeholder/>
    </else>
</div>
