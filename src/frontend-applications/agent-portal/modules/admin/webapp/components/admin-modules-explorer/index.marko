<div.admin-modules-explorer>
    <widget
        instanceId=state.instanceId
        title=(
            state.widgetConfiguration
                ? state.widgetConfiguration.title
                : "Translatable#Administration"
        )>
        <@content>
            <filter
                on-filter("filter")
                key="admin-modules-explorer-filter"
                showFilterCount=false/>
            <if(state.nodes && state.prepared)>
                <tree
                    tree=state.nodes
                    key="admin-modules-tree"
                    activeNode=state.activeNode
                    filterValue=state.filterValue
                    on-nodeClicked("activeNodeChanged")/>
            </if>
        </@content>
    </widget>
</div>
