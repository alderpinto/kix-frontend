<header>
    <if(state.logoIcon)>
        <img#logo src=("data:" + state.logoIcon.ContentType + ";base64," + state.logoIcon.Content)/>
    </if>
    <else>
        <img#logo src="/static/img/kix-cloud-logo.png"/>
    </else>
    <div>
        <if(state.allowNew)>
            <a href="?new" on-click("openDialog")>
                <button.special-button type="button">
                    <span.kix-icon-plus-blank/>
                    <translation-string pattern="Translatable#New"/>
                </button>
            </a>
            <div.header-separator/>
        </if>
        <bookmarks/>
        <div.header-separator/>
        <quick-search/>
        <toolbar/>
        <div.kix-toolbar>
            <div.toolbar-group>
                <div>
                    <div.action-icon>
                        <span.kix-icon-gear.as-button
                            title=state.translations["Translatable#Personal Settings"]
                            on-click("showPersonalSettings")/>
                    </div>
                </div>
                <link-target routingConfiguration=component.getReleaseRoutingConfig()>
                    <@content>
                        <div>
                            <div.action-icon>
                                <span.kix-icon-query.as-button title=state.translations["Translatable#Help"]/>
                            </div>
                        </div>
                    </@content>
                </link-target>
                <div>
                    <div.action-icon>
                        <span.kix-icon-logout on-click("logout") title=state.translations["Translatable#Logout"]/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
