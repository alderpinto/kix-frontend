<if(!state.isMobile || state.showMobile)>
    <div class=(state.isMobile ? "mobile-main-menu-container" : "main-menu-container")>
        <if(!state.loading)>
            <ul.menu.main-menu class={
                "image-only": !state.showText && !state.isMobile
            }>
                <for|menuEntry| of=state.primaryMenuEntries>
                    <if(menuEntry.show)>
                        <li
                            key=menuEntry.text
                            title=state.translations[menuEntry.text]
                            class={
                                active: menuEntry.active
                            }>
                            <menu-entry entry=menuEntry isMobile=state.isMobile/>
                        </li>
                    </if>
                </for>
            </ul>
            <ul.menu.user-menu class={
                "image-only": !state.showText && !state.isMobile
            }>
                <for|menuEntry| of=state.secondaryMenuEntries>
                    <if(menuEntry.show)>
                        <li
                            key=menuEntry.text
                            title=state.translations[menuEntry.text]
                            class={
                                active: menuEntry.active
                            }>
                            <menu-entry entry=menuEntry isMobile=state.isMobile/>
                        </li>
                    </if>
                </for>
            </ul>
            <if(state.isMobile)>
                <div.context-list>
                    <tabbar/>
                </div>
            </if>
        </if>
    </div>
</if>
