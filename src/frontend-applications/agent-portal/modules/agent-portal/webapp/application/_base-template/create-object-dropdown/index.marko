<if(state.prepared && state.selectedValue)>
    <div.new-object-dropdown-container>
        <span.selected-value on-click("valueClicked", state.selectedValue)>
            <i.fa.fa-ellipsis-v.dropdown-button/>
            <span>${state.selectedValue[1]}</span>
            <i.fa.fa-plus/>
        </span>
        <ul>
            <for|value| of=state.values>
                <li
                    class={
                        active: value[0] === state.selectedValue[0]
                    }
                    on-click("valueClicked", value)>
                    ${value[1]}
                </li>
            </for>
        </ul>
    </div>
</if>
